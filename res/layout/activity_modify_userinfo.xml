<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改资料"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#ffe7e7e7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="用户名"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/uname_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="@dimen/text_size_22"
                    android:background="@drawable/edittext_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="#e7e7e7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="性别"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_16" />

                <RelativeLayout
                    android:id="@+id/male"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center_vertical"
                        android:text="男"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_22" />

                    <ImageView
                        android:id="@+id/male_check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_gender_check"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center_vertical"
                        android:text="女"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_22" />

                    <ImageView
                        android:id="@+id/female_check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_gender_check"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center_vertical"
                        android:text="其他"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_22" />

                    <ImageView
                        android:id="@+id/other_check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_gender_check"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="#e7e7e7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="所在地"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_16" />

                <Spinner
                    android:id="@+id/province_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/spinner_bg"
                    android:paddingBottom="0dp"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/spinner_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="0dp"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffe7e7e7"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="手机"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:id="@+id/telephone_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="57dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_22"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="57dip"
        android:layout_alignParentBottom="true"
        android:background="#107cfd" >

        <TextView
            android:id="@+id/btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_save"
            android:gravity="center"
            android:text="  保存"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>