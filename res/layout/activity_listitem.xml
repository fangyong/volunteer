<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="#ffffffff" >

    <RelativeLayout
        android:id="@+id/avatar_rl"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:background="#ffeeeeee"
            android:padding="5dip" />

        <TextView
            android:id="@+id/badgeView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/badgebg"
            android:gravity="center"
            android:text="V"
            android:textColor="#FFEE33"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/avatar_rl"
        android:layout_marginRight="15dip"
        android:src="@drawable/icon_fav" >
    </ImageView>

    <TextView
        android:id="@+id/distLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar_rl"
        android:layout_alignRight="@+id/rightIcon"
        android:text="&lt; 500m"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/avatar_rl"
        android:layout_alignTop="@+id/avatar_rl"
        android:layout_marginBottom="-5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="-5dip"
        android:layout_toLeftOf="@+id/rightIcon"
        android:layout_toRightOf="@+id/avatar_rl"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="西南小学教师志愿者活动"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/icon_time" />

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="07-12 11:00 - 07-20 16:00"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/locIcon"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/icon_loc" />

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="北京市海淀区海淀中街13号"
                android:textSize="10sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>