<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light_blue" >

            <RelativeLayout
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_back_white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="关于"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_24" />
        </RelativeLayout>

        <ImageView
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/about_title" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text="百度志愿者致力于促进志愿者活动发展， 让想参与公益\n\ 活动的人更加方便快捷的获取信息， 使志愿者活动成为日常的一种生活方式。"
            android:textAlignment="textStart"
            android:textColor="@color/gary"
            android:textSize="10.5sp" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/about_icon2"
            android:scaleType="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:autoLink="web"
            android:text="百度志愿者QQ群：383478252"
            android:textColor="@color/gary"
            android:textSize="10.5sp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/copyright"
            android:scaleType="center" />
    </LinearLayout>

</ScrollView>